{
  "info": {
    "name": "go_commerce API (complete)",
    "_postman_id": "",
    "description": "Postman collection for go_commerce project - covers /api/v1 users, products and cart endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "verification_token", "value": "" }
  ],
  "item": [
    {
      "name": "Users / Sign Up",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"1234567890\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/users/signup", "host": ["{{baseUrl}}"], "path": ["api","v1","users","signup"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () { pm.response.to.have.status(201); });",
              "pm.test('Response has message', function () { var json = {}; try { json = pm.response.json(); } catch(e){}; pm.expect(json).to.have.property('message'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Users / Verify Email",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/verify?token={{verification_token}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","users","verify"],
          "query": [{ "key": "token", "value": "{{verification_token}}" }]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Verified message', function () { var json = {}; try { json = pm.response.json(); } catch(e){}; pm.expect(json).to.have.property('message'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Users / Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/users/login", "host": ["{{baseUrl}}"], "path": ["api","v1","users","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = {}; try { json = pm.response.json(); } catch(e){};",
              "pm.test('Save token and userId if present', function () { if (json && json.token) { pm.collectionVariables.set('token', json.token); } if (json && json.user && json.user.id) { pm.collectionVariables.set('userId', json.user.id); } pm.expect(json).to.have.property('token'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Users / Me (authenticated)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/api/v1/users/me", "host": ["{{baseUrl}}"], "path": ["api","v1","users","me"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = {}; try { json = pm.response.json(); } catch(e){}; pm.test('Has id', function () { pm.expect(json).to.have.property('id'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Products / Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Product\",\n  \"price\": 1999,\n  \"image\": \"https://example.com/image.jpg\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/products/", "host": ["{{baseUrl}}"], "path": ["api","v1","products",""] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () { pm.response.to.have.status(201); });",
              "var json = {}; try { json = pm.response.json(); } catch(e){}; pm.test('Save product id', function () { if (json && json.id) { pm.collectionVariables.set('productId', json.id); } else if (json && json.ID) { pm.collectionVariables.set('productId', json.ID); } pm.expect(json).to.have.property('id'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Products / List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/v1/products/", "host": ["{{baseUrl}}"], "path": ["api","v1","products",""] }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 200', function () { pm.response.to.have.status(200); });", "pm.test('Response is array', function(){ var json = []; try { json = pm.response.json(); } catch(e){}; pm.expect(json).to.be.an('array'); });"] } }
      ]
    },
    {
      "name": "Products / Get by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","products","{{productId}}"]
        }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 200', function () { pm.response.to.have.status(200); });", "pm.test('Has id', function(){ var json = {}; try { json = pm.response.json(); } catch(e){}; pm.expect(json).to.have.property('id'); });"] } }
      ]
    },
    {
      "name": "Products / Search",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/products/search?name=phone",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","products","search"],
          "query": [{ "key": "name", "value": "phone" }]
        }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 200', function () { pm.response.to.have.status(200); });", "pm.test('Array', function(){ var json = []; try { json = pm.response.json(); } catch(e){}; pm.expect(json).to.be.an('array'); });"] } }
      ]
    },
    {
      "name": "Cart / Add Item (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": \"{{productId}}\",\n  \"quantity\": 1\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/cart/add", "host": ["{{baseUrl}}"], "path": ["api","v1","cart","add"] }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status is 202 or 401', function () { pm.expect(pm.response.code).to.be.oneOf([202,401]); });"] } }
      ]
    },
    {
      "name": "Cart / Get (auth)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/api/v1/cart/", "host": ["{{baseUrl}}"], "path": ["api","v1","cart",""] }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 200 or 401', function () { pm.expect(pm.response.code).to.be.oneOf([200,401]); });", "pm.test('Has cart key when 200', function(){ if(pm.response.code===200){ var json={}; try{ json=pm.response.json(); }catch(e){}; pm.expect(json).to.have.property('cart'); } });"] } }
      ]
    },
    {
      "name": "Cart / Remove Item (auth)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": \"{{productId}}\",\n  \"quantity\": 1\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/cart/remove", "host": ["{{baseUrl}}"], "path": ["api","v1","cart","remove"] }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 202 or 400', function () { pm.expect(pm.response.code).to.be.oneOf([202,400,401]); });"] } }
      ]
    },
    {
      "name": "Cart / Clear (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/v1/cart/clear", "host": ["{{baseUrl}}"], "path": ["api","v1","cart","clear"] }
      },
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": ["pm.test('Status 202 or 400', function () { pm.expect(pm.response.code).to.be.oneOf([202,400,401]); });"] } }
      ]
    }
  ]
}