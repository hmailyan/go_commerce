      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response is array', function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Search Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users/search?name=phone",
          "host": ["{{baseUrl}}"],
          "path": ["users", "search"],
          "query": [
            { "key": "name", "value": "phone" }
          ]
        }
      },
      "response": [
        {
          "name": "Search results",
          "originalRequest": { "method": "GET", "header": [] },
          "status": "OK",
          "code": 200,
          "body": "[ { \"_id\": \"60b8d6...\", \"product_name\": \"Phone X\", \"price\": 49999 } ]"
        }
      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response contains an array', function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },
    {
