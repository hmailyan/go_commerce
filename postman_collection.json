      "response": [
        {
          "name": "Added to cart",
          "originalRequest": { "method": "GET", "header": [] },
          "status": "OK",
          "code": 200,
          "body": "{ \"message\": \"Product added to cart successfully\" }"
        }
      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is OK or Unauthorized', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 401, 400]);",
              "});",
              "var json = {};",
              "try { json = pm.response.json(); } catch (e) {}",
              "pm.test('Response has message or error', function () {",
              "    if (json && json.message) pm.expect(json).to.have.property('message');",
              "    if (json && json.error) pm.expect(json).to.have.property('error');",
              "});"
            ]
          }
        }
      ]
    },
