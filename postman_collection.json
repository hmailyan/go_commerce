{
  "info": {
    "name": "go_commerce API",
    "_postman_id": "",
    "description": "Postman collection for go_commerce project - generated from source routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Sign Up",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"password\": \"password123\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"1234567890\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/signup",
          "host": ["{{baseUrl}}"],
          "path": ["users", "signup"]
        }
      },
      "response": [
        {
          "name": "Signup created",
          "originalRequest": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw" }
          },
          "status": "Created",
          "code": 201,
          "body": "{ \"message\": \"user created successfully\" }"
        }
      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test('Response contains message', function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json).to.have.property('message');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/login",
          "host": ["{{baseUrl}}"],
          "path": ["users", "login"]
        }
      },
      "response": [
        {
          "name": "Login success",
          "originalRequest": { "method": "POST", "header": [] },
          "status": "Found",
          "code": 302,
          "body": "{ \"email\": \"john.doe@example.com\", \"token\": \"<token>\" }"
        }
      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 302', function () {",
              "    pm.response.to.have.status(302);",
              "});",
              "var json = {};",
              "try { json = pm.response.json(); } catch (e) {}",
              "pm.test('If token exists, save it to collection', function () {",
              "    if (json && json.token) {",
              "        pm.collectionVariables.set('token', json.token);",
              "        pm.expect(json).to.have.property('token');",
              "    } else {",
              "        pm.expect(pm.response.code).to.be.oneOf([302, 401, 500]);",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Add Product (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_name\": \"Sample Product\",\n  \"price\": 1999,\n  \"rating\": 5,\n  \"image\": \"https://example.com/image.jpg\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/admin/addproduct",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "addproduct"]
        }
      },
      "response": [
        {
          "name": "Add product ok",
          "originalRequest": { "method": "POST", "header": [] },
          "status": "OK",
          "code": 200,
          "body": "\"Successfully\""
        }
      ],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200,401]);",
              "});",
              "pm.test('Response is OK or unauthorized', function () {",
              "    var ok = (pm.response.code === 200);",
              "    var json = {};",
              "    try { json = pm.response.json(); } catch (e) {}",
              "    if (ok) { pm.expect(pm.response.text()).to.include('Successfully'); }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users/productview",
          "host": ["{{baseUrl}}"],
          "path": ["users", "productview"]
        }
      },
      "response": [
        {
          "name": "Products list",
          "originalRequest": { "method": "GET", "header": [] },
          "status": "OK",
          "code": 200,
          "body": "[ { \"_id\": \"60b8d6...\", \"product_name\": \"Sample Product\", \"price\": 1999 } ]"
